extends layout

block content
  h1= title
  p Welcome to the tree pug
  div(class="container-fluid")
        div(class="row")
            -
                let tree = results
            each v,index in tree
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.tree_type}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.size}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.age}
  script.                
    function buy(itemNo)
    {
        alert(`you purchased Item ${itemNo+1}`)
    }